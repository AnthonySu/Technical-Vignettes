:coffeescript
    $ ->
        console.warn "IS JQUERYUI DROPPABLE INSTALLED?", $(window).droppable
        $('#drop-square').draggable()
        $('#dropzone1').droppable 
            drop: (event, ui) ->
                $(this).css 'color', 'green'
                $('#drop-square').css 'background', 'red'
                $('#drop-square').css 'font-color', 'white'
            over: (event, ui) ->
                $('#drop-square').css 'background', '#ff5c33'
                $('#drop-square').css 'color', 'white'
            out: (event, ui) ->
                $('#drop-square').css 'background', 'white'
                $('#drop-square').css 'color', 'black'

        $('#dropzone2').droppable 
            drop: (event, ui) ->
                $(this).css 'color', 'green'
                $('#drop-square').css 'background', 'DarkBlue'
                $('#drop-square').css 'color', 'white'
            over: (event, ui) ->
                $('#drop-square').css 'background', 'blue'
                $('#drop-square').css 'color', 'white'
            out: (event, ui) ->
                $('#drop-square').css 'background', 'white'
                $('#drop-square').css 'color', 'black'
 

            
            
            
#touchpad
    #drop-square
        %h2 DROP ME!
    #dropzone1.dropzone
        %h2 DROPZONE1
    #dropzone2.dropzone
        %h2 DROPZONE2
    
