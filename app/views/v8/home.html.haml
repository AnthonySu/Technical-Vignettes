:scss
    $touchpad-bg: desaturate(cyan, 70%);
    $touch-square: lighten($touchpad-bg, 70%);
    #touchpad{
        height: 100%;
        width: 100%;
        color: white;
        font-family: Avenir, sans-serif;
        font-size: 4em;
        text-align: center;
            
        background: darken($touchpad-bg, 20%);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        #drop-square{
            width: 150px;
            height: 150px;
            border-radius: 5px;
            background: $touch-square;
            color: darken($touchpad-bg, 60%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;
            h2{
                font-size: 22px;
            }
        }
        #dropzone1{
            width: 300px;
            height: 300px;
            background: lighten(desaturate(cyan, 70%), 40%);
        }
        #dropzone2{
            width: 300px;
            height: 400px;
            background: lighten(desaturate(cyan, 60%), 20%);
            
        }
        .dropzone{
            margin: 10px;
            color: darken($touchpad-bg, 60%);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: row;
            h2{
                font-size: 22px;
            }
        }
    }
    
    #back-button{
        position: absolute;
        z-index: 100;
        top: 15px;
        left: 15px;
    }
    
    .highlight {
        color: red;
        background: red;
    }
    
